{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Cave Test (Debug)",
            "type": "shell",
            "command": "cmake --preset=debug -S . -B build && cmake --build build --target cave_test",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "clear": true,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Cave Test (Release)",
            "type": "shell",
            "command": "cmake --preset=release -S . -B build && cmake --build build",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "clear": true,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
}